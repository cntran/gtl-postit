<%= render 'shared/errors', obj: @post %>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br />
  <%= f.label :url %>
  <%= f.text_field :url %><br />
  <%= f.label :description %>
  <%= f.text_area :description, size: "60x4" %><br />

  <%= f.label "Categories" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
    <% cb.label(class: "checkbox inline") { cb.check_box(class: "checkbox") + cb.text} %>
  <% end %>
  <br /><br />

  <%= f.submit (@post.new_record? ? "Submit Link" : "Update Link"), :class => "btn btn-small" %>
<% end %>